package Assignments;

import java.util.Scanner;

public class NumToBinary {

	public static void main(String[] args) {
		
			Scanner scan = new Scanner(System.in);
			int n = scan.nextInt();
			
			int pv = 1;  
			int answer = 0;                                         
			while(n!=0) {
				
	             answer = n%2;
	             n = n/2;
	 			pv = pv * pv;
	 			 System.out.print(answer);
			}
			}
			
			
			
		}

